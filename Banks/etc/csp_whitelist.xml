<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="openpay.mx" type="host">*.openpay.mx</value>
                <value id="openpay.co" type="host">*.openpay.co</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="openpay-img" type="host">*.postimg.cc</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="openpay-dashboard.mx" type="host">*.openpay.mx</value>
                <value id="openpay-dashboard.co" type="host">*.openpay.co</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>